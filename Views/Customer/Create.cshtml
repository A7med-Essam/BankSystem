@model BankSystem.Models.Customer_VM
@{
    ViewBag.Title = "Customer";
}
<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Create Customer</h5>
                <div class="card">
                    <div class="card-body">
                        <form asp-action="create" asp-controller="customer" method="post">
                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    <label asp-for="FirstName" class="form-label">First Name</label>
                                    <input type="text" class="form-control" asp-for="FirstName">
                                    <span asp-validation-for="FirstName" class="form-text text-danger"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label asp-for="LastName" class="form-label">Last Name</label>
                                    <input type="text" class="form-control" asp-for="LastName">
                                    <span asp-validation-for="LastName" class="form-text text-danger"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label asp-for="NationalId" class="form-label">NationalId</label>
                                    <input type="text" class="form-control" asp-for="NationalId">
                                    <span asp-validation-for="NationalId" class="form-text text-danger"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label asp-for="Address" class="form-label">Address</label>
                                    <input type="text" class="form-control" asp-for="Address">
                                    <span asp-validation-for="Address" class="form-text text-danger"></span>

                                </div>
                           
                                <div class="mb-3 col-md-6">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input type="Email" class="form-control" asp-for="Email">
                                    <span asp-validation-for="Email" class="form-text text-danger"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label asp-for="Phone" class="form-label">Phone</label>
                                    <input type="text" class="form-control" asp-for="Phone">
                                    <span asp-validation-for="Phone" class="form-text text-danger"></span>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label asp-for="BirthDate" class="form-label">BirthDate</label>
                                    <input type="date" class="form-control" asp-for="BirthDate">
                                    <span asp-validation-for="BirthDate" class="form-text text-danger"></span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                    </div>
                </div>
                <div class="card-footer">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
        </div>
    </div>
</div>