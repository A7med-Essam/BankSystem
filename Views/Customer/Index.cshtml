@model IEnumerable<BankSystem.Models.Customer_VM>
@{
    ViewBag.Title = "Customer";
}
<div class="container-fluid">
    <div class="card">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title fw-semibold mb-4">Recent Customers</h5>
                <a asp-controller="customer" asp-action="create" class="btn btn-success py-8 fs-4 mb-4 rounded-2">Create Customer</a>
            </div>

            <div class="table-responsive">
                <table class="table text-nowrap mb-0 align-middle">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0 text-center">
                                <h6 class="fw-semibold mb-0">Full Name</h6>
                            </th>
                            <th class="border-bottom-0 text-center">
                                <h6 class="fw-semibold mb-0">National Id</h6>
                            </th>
                            <th class="border-bottom-0 text-center">
                                <h6 class="fw-semibold mb-0">Phone</h6>
                            </th>
                            <th class="border-bottom-0 text-center">
                                <h6 class="fw-semibold mb-0">BirthDate</h6>
                            </th>
            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="border-bottom-0 text-center">
                                    <h6 class="fw-semibold mb-1">
                                        @item.FirstName
                                    </h6>
                                    <span class="fw-normal">
                                        @item.LastName
                                    </span>
                                </td>
                                <td class="border-bottom-0 text-center">
                                    <h6 class="fw-semibold mb-0">
                                        @item.NationalId
                                    </h6>
                                </td>
                                <td class="border-bottom-0 text-center">
                                    <p class="mb-0 fw-normal">
                                        <span class="badge rounded-3 fw-semibold bg-primary">
                                            @item.Phone
                                        </span>
                                    </p>
                                </td>
                                <td class="border-bottom-0 text-center">
                                    <p class="mb-0 fw-normal">
                                        @item.BirthDate.ToShortDateString()
                                    </p>
                                </td>
               
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>